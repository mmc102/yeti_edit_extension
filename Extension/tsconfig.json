{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "dom"
        ],
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true, // this feels bad
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "importsNotUsedAsValues": "remove",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*"
    ]
}
